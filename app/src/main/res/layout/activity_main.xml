<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#FFFFFF">

            <ImageView
                android:id="@+id/setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:onClick="OpenLeftMenu"
                android:src="@drawable/tab_icon_special"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="个人日志"
                android:textColor="#48b775"
                android:textSize="22dp"/>

            <ImageView
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:onClick="OpenRightMenu"
                android:src="@drawable/tab_icon_special"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/main_content"
            android:layout_width="fill_parent"
            android:layout_below="@+id/layout_title"
            android:layout_above="@+id/radio_group"
            android:layout_height="match_parent" />



        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_recommend"
                style="@style/RadioButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/tab_icon_special"
                android:text="个人日志"/>

            <RadioButton
                android:id="@+id/rb_sort"
                style="@style/RadioButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/tab_icon_special"
                android:text="图灵机器人"/>

            <RadioButton
                android:id="@+id/rb_topic"
                style="@style/RadioButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/tab_icon_special"
                android:text="课表"/>


        </RadioGroup>


    </RelativeLayout>



    <fragment
        android:id="@+id/id_left_menu"
        android:name="android.bishe.fragment.MenuLeftFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:tag="LEFT" />

    <fragment
        android:id="@+id/id_right_menu"
        android:name="android.bishe.fragment.MenuRightFragment"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:tag="RIGHT" />




</android.support.v4.widget.DrawerLayout>
